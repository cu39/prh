{
  "name": "prh",
  "version": "3.0.1",
  "description": "proofreading helper",
  "main": "index.js",
  "bin": {
    "prh": "./bin/prh"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tslint --fix --type-check -c tslint.json -p tsconfig.json && tsfmt -r && tsc",
    "test": "npm run build && mocha --reporter spec --timeout 20000 --require intelli-espower-loader",
    "update-submodules": "git submodule foreach 'git pull --rebase'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vvakame/prh.git"
  },
  "author": "vvakame",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vvakame/prh/issues"
  },
  "homepage": "https://github.com/vvakame/prh",
  "dependencies": {
    "commandpost": "^1.2.0",
    "js-yaml": "^3.9.1"
  },
  "devDependencies": {
    "@types/glob": "^5.0.30",
    "@types/js-yaml": "^3.9.0",
    "@types/mkdirp": "^0.5.0",
    "@types/mocha": "^2.2.32",
    "@types/node": "^8.0.19",
    "@types/power-assert": "^1.4.29",
    "glob": "^7.1.2",
    "grunt": "^1.0.1",
    "grunt-conventional-changelog": "6.1.0",
    "intelli-espower-loader": "^1.0.1",
    "load-grunt-tasks": "^3.5.2",
    "mkdirp": "^0.5.1",
    "mocha": "^3.5.0",
    "power-assert": "^1.4.4",
    "source-map-support": "^0.4.5",
    "tslint": "^5.5.0",
    "typescript": "^2.4.2",
    "typescript-formatter": "^5.2.0"
  }
}
